<Window x:Class="WPF_application.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_application"
        mc:Ignorable="d"
        Title="New item" Height="315" Width="400" WindowStartupLocation="CenterOwner" >

    <StackPanel>
        <StackPanel HorizontalAlignment="Left">

            <Label Content="Please input the US standard:"/>
            <TextBox x:Name="USTXB" HorizontalAlignment="Left" Width="200"/>
            <Label Content="Please input the DIN standard:"/>
            <TextBox x:Name="DINTXB" HorizontalAlignment="Left" Width="200"/>
            <Label Content="Please input the UK standard:"/>
            <TextBox x:Name="UKTXB" HorizontalAlignment="Left" Width="200"/>
            <Label Content="Please input the JIS standard:"/>
            <TextBox x:Name="JISTXB" HorizontalAlignment="Left" Width="200"/>
            <Label HorizontalAlignment="Left" Content="Classification"/>
            <TextBox x:Name="CTXB" HorizontalAlignment="Left" Width="200"/>
        </StackPanel>
        <StackPanel>
        </StackPanel>
        <Button Content="Click to finalize" VerticalAlignment="Bottom" Click="Button_Click"/>
    </StackPanel>
</Window>
